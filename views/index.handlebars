<h1>{{title}}</h1>


<div class="container">
  <div class="row">
    <div class="col">

      <h2>Burgers yet to be eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col">
      <h2>Burgers that have been devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>

<div class="addburg">

  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
  </form>



</div>